        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "pluginVersion": "10.0.3",
      "repeat": "node",
      "repeatDirection": "h",
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "100 - ((node_filesystem_avail_bytes{instance=~\"$node\",mountpoint=\"/\",fstype!=\"rootfs\"} * 100) / node_filesystem_size_bytes{instance=~\"$node\",mountpoint=\"/\",fstype!=\"rootfs\"})",
          "refId": "A"
        }
      ],
      "title": "$node Disk Usage",
      "type": "gauge"
    },
    {
      "datasource": "${DS_PROMETHEUS}",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": {
              "type": "auto"
            },
            "inspect": false
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Uptime"
            },
            "properties": [
              {
                "id": "unit",
                "value": "s"
              }
            ]
          }
        ]
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "id": 5,
      "options": {
        "showHeader": true
      },
      "pluginVersion": "10.0.3",
      "targets": [
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "node_uname_info{instance=~\"$node\"}",
          "format": "table",
          "instant": true,
          "refId": "A"
        },
        {
          "datasource": "${DS_PROMETHEUS}",
          "expr": "node_boot_time_seconds{instance=~\"$node\"}",
          "format": "table",
          "instant": true,
          "refId": "B"
        }
      ],
      "title": "Node Information",
      "transformations": [
        {
          "id": "merge",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "domainname": true,
              "job": true,
              "Value #A": true
            },
            "indexByName": {},
            "renameByName": {
              "Value #B": "Boot Time",
              "instance": "Node",
              "nodename": "Hostname",
              "release": "Kernel",
              "sysname": "OS"
            }
          }
        },
        {
          "id": "calculateField",
          "options": {
            "alias": "Uptime",
            "binary": {
              "left": "Boot Time",
              "operator": "-",
              "reducer": "sum",
              "right": "now()"
            },
            "mode": "binary",
            "reduce": {
              "reducer": "sum"
            }
          }
        }
      ],
      "type": "table"
    }
